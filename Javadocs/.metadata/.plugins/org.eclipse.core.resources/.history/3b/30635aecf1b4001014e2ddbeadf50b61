package laaouar;

import java.util.Scanner;

public class Ejercicio2 
{
	public static void main(String[] args) 
	{
		Scanner teclado= new Scanner(System.in);
		int numeroInicial=0;
		double fitness=10.00, yoga=15.00, musculacion=20.00;
		
		double iva1;
		double iva2;
		double iva3;
		double pvp1;
		double pvp2;
		double pvp3;
		
		System.out.println("EJERCICIO 1: GESTIÓN DE UN GIMNASIO");
		System.out.println("----------------------------------");
		System.out.println("TIPOS DE MATRICULAS: 1. FITNESS - 2. YOGA - 3. MUSCULACIÓN"+
				 "\nPrecio de la matrícula tipo 1 (FITNESS): 10.0€"+
				 "\nPrecio de la matrícula tipo 2 (YOGA): 15.0€"+
				 "\nPrecio de la matrícula tipo 3 (MUSCULACIÓN): 20.0€");
		System.out.println("");
		System.out.println("----------------------------------");
		do
		{
			System.out.println("1. Calcular PVP de cada matricula.\r\n"
					+ "2. Aplicar oferta a un tipo de matricula (sin iva).\r\n"
					+ "3. Calcular el importe total de matriculas realizadas (sin iva).\r\n"
					+ "4. Salir");
			System.out.print(" Seleccione una opción:");
			numeroInicial=teclado.nextInt();
			
			if(numeroInicial==1)
			{
				System.out.println("Ingrese el IVA para el tipo de matrícula 1 (4 - 10 - 21): ");
				iva1=teclado.nextDouble();
				pvp1=fitness+(fitness*iva1/100);
				
				System.out.println("Ingrese el IVA para el tipo de matrícula 2 (4 - 10 - 21): ");
				iva2=teclado.nextDouble();
				pvp2=yoga+(yoga*iva2/100);
				
				System.out.println("Ingrese el IVA para el tipo de matrícula 3 (4 - 10 - 21): ");
				iva3=teclado.nextDouble();
				pvp3=musculacion+(musculacion*iva3/100);
				
				System.out.println(" El PVP de la actividad de Fitness es: "+pvp1);
				System.out.println(" El PVP de la actividad de Yoga es: "+pvp2);
				System.out.println(" El PVP de la actividad de Musculación es: "+pvp3);
			}
		}while(numeroInicial<=0);
		
		
		
	}
}
